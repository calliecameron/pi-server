route:
  receiver: webhook
  group_by: [alertname, job, instance]
  group_wait: 0s
  group_interval: 10s

receivers:
  - name: webhook
    webhook_configs:
      - url: "http://host.docker.internal:{{ pi_server_apps_monitoring_webhook_port }}/hooks/{{ pi_server_apps_monitoring_webhook_id }}"
        send_resolved: false
