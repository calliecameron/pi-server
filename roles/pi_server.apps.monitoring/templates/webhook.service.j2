[Unit]
Documentation=https://github.com/adnanh/webhook/
ConditionPathExists=/etc/webhook.conf

[Service]
ExecStart=/usr/bin/webhook -verbose -nopanic -hooks /etc/webhook.conf -port {{ pi_server_apps_monitoring_webhook_port }}
User={{ pi_server_apps_monitoring_user }}
Group={{ pi_server_apps_monitoring_user }}

[Install]
WantedBy=multi-user.target
