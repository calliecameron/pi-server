rule_files:
  - /rules.d/*.yml

scrape_configs:
  - job_name: jobs
    honor_labels: true
    file_sd_configs:
      - files:
          - /scrapes.d/*.yml
    relabel_configs:
      - target_label: instance
        replacement: "{{ pi_server_hostname }}"

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['alertmanager:{{ pi_server_apps_monitoring_alertmanager_port }}']
